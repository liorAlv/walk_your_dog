<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    tools:context=".fragments.FrontPage">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textname"
                    android:layout_width="283dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="name:"
                    android:textAllCaps="false"
                    android:textColor="#F6F5F5" />

                <TextView
                    android:id="@+id/nameFront"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="name" />

                <TextView
                    android:id="@+id/textage"
                    android:layout_width="269dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="age:"
                    android:textAllCaps="false"
                    android:textColor="#F6F5F5" />

                <TextView
                    android:id="@+id/ageFront"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="age" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textcity"
                    android:layout_width="294dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="city:"
                    android:textAllCaps="false"
                    android:textColor="#F6F5F5" />

                <TextView
                    android:id="@+id/cityFront"
                    android:layout_width="338dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="City" />

                <TextView
                    android:id="@+id/textPrice"
                    android:layout_width="275dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="price:"
                    android:textAllCaps="false"
                    android:textColor="#F6F5F5" />

                <TextView
                    android:id="@+id/priceFront"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Price" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textPhone"
                    android:layout_width="278dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="phone:"
                    android:textAllCaps="false"
                    android:textColor="#F6F5F5" />

                <TextView
                    android:id="@+id/phoneFront"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phone" />

                <TextView
                    android:id="@+id/textLink"
                    android:layout_width="269dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="link:"
                    android:textAllCaps="false"
                    android:textColor="#F6F5F5" />

                <TextView
                    android:id="@+id/linkFront"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Link" />

            </LinearLayout>


            <TextView
                android:id="@+id/informationFront"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Information" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>